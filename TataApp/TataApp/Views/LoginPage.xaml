<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TataApp.Views.LoginPage"
             Title="Login"
             BackgroundColor="{StaticResource MenuColor}"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Login}">
            <StackLayout
                Spacing="10"
                Padding="8">
                <Image
                    HeightRequest="100"
                    WidthRequest="100"
                    Source="bancolombia.png">
                </Image>
                <Label
                    Text="Login"
                    FontSize="Large"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    TextColor="{StaticResource MenuFontColor}">
                </Label>
                <Grid
                    Padding="50,0,50,0">
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Text="Email"
                            FontAttributes="Bold"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            TextColor="{StaticResource MenuFontColor}">
                        </Label>
                        <Entry
                            Grid.Column="1"
                            Text="{Binding Email}"
                            Placeholder="Enter an email..."
                            Keyboard="Email"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Center"
                            BackgroundColor="{StaticResource MenuColor}">
                        </Entry>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Text="Password"
                            FontAttributes="Bold"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            TextColor="{StaticResource MenuFontColor}">
                        </Label>
                        <Entry
                            Grid.Column="1"
                            Text="{Binding Password}"
                            Placeholder="Enter a password..."
                            IsPassword="True"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Center"
                            BackgroundColor="{StaticResource MenuColor}">
                        </Entry>
                    </Grid>
                </Grid>
                <StackLayout
                    Padding="30,0,30,0"
                    Orientation="Horizontal">
                    <Switch
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        IsToggled="{Binding IsRemembered}">
                    </Switch>
                    <Label
                        Text="Rememberme"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        TextColor="{StaticResource MenuFontColor}">
                    </Label>
                </StackLayout>
                <ActivityIndicator
                    Color="{StaticResource AccentColor2}"
                    IsRunning="{Binding IsRunning}">
                </ActivityIndicator>
                <StackLayout
                    Padding="30,0,30,0"
                    Orientation="Vertical">
                    <Button
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsEnabled}"
                        VerticalOptions="Center"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="{StaticResource MenuFontColor}"
                        TextColor="{StaticResource MenuColor}"
                        HeightRequest="40"
                        BorderRadius="20"
                        Text="Login">
                    </Button>
                    <Button
                        Command="{Binding LoginFacebookCommand}"
                        IsEnabled="{Binding IsEnabled}"
                        VerticalOptions="Center"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="{StaticResource MenuFontColor}"
                        TextColor="{StaticResource MenuColor}"
                        HeightRequest="40"
                        BorderRadius="20"
                        Text="Login With Facebook">
                    </Button>
                    <Button
                        Command="{Binding RegisterCommand}"
                        IsEnabled="{Binding IsEnabled}"
                        VerticalOptions="Center"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="{StaticResource MainColor}"
                        TextColor="{StaticResource MenuFontColor}"
                        HeightRequest="40"
                        BorderRadius="20"
                        Text="Register New User">
                    </Button>
                    <Label
                        Text="Forgot your password?"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        TextColor="{StaticResource MenuFontColor}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>